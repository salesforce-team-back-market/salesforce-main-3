<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <submitter>lea.preuilh@backmarket.com</submitter>
        <type>user</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>P_K__c</field>
        <field>Business_Name__c</field>
        <field>Referent_Champion__c</field>
        <field>Issue_KPI__c</field>
        <field>ETA__c</field>
        <field>Objective_to_reach__c</field>
        <field>Actual_Rate__c</field>
        <field>Actual_Number_of_cases__c</field>
        <field>Reason_to_refuse__c</field>
        <field>Reason_to_refuse_comment__c</field>
        <field>Name</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Set_has_been_saved_on</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Set_stage_to_Saved</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Set_Tech_approved_manager</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>lea.preuilh@backmarket.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Validation</label>
        <name>Validation</name>
    </approvalStep>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>(RecordType.DeveloperName = &quot;Monitoring_Period_Sales&quot; ||
RecordType.DeveloperName = &quot;Monitoring_Period_Buyback&quot;)
&amp;&amp; ISPICKVAL(Stage__c, &quot;Last chance&quot;) 
&amp;&amp; NOT(ISBLANK(Reason_to_refuse__c))
&amp;&amp; NOT(ISBLANK(Reason_to_refuse_comment__c))
&amp;&amp; Has_entered_Last_chance_on__c &gt;= Today() - 7</formula>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Unset_Has_been_submitted_on</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Unset_is_locked</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Unset_Pending_for_manager</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Unset_Has_been_submitted_on</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Unset_is_locked</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Unset_Pending_for_manager</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Set_Has_been_submitted_on</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Set_is_locked</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Set_pending_for_manager</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Alert - Last chance validation</label>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>Unset_Has_been_submitted_on</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Unset_is_locked</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Unset_Pending_for_manager</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
