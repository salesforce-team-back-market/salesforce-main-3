<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <submitter>View_All</submitter>
        <type>role</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>Supply_Leader</submitter>
        <type>roleSubordinates</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Back_Office_PK__c</field>
        <field>Merchant__c</field>
        <field>RecordType</field>
        <field>From_NMO_2_to_Exit_Big__c</field>
        <field>Name</field>
        <field>Has_Begun_On__c</field>
        <field>Stage__c</field>
        <field>Has_Reached_100_Sales__c</field>
        <field>BizDev__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>NMO_Process_response_e_mail</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Set_NMO_success</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>BizDevApproval__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>Unanimous</whenMultipleApprovers>
        </assignedApprover>
        <label>Validation Phase</label>
        <name>Validation_Phase</name>
        <rejectionActions>
            <action>
                <name>NMO_Process_response_e_mail</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Update_NMO_failed</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>This Approval Process is meant to decide whether or not a Merchant may go run or refused during a NMO 2 Observation Phase.</description>
    <emailTemplate>Admin_templates/NMO_Process_Phase_2_to_N_M_O_2_approval_submission_e_mail_text_version</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>1 AND 2 AND 3 AND 4</booleanFilter>
        <criteriaItems>
            <field>NMO_Process__c.NMO_Success__c</field>
            <operation>equals</operation>
            <value>False</value>
        </criteriaItems>
        <criteriaItems>
            <field>NMO_Process__c.Stage__c</field>
            <operation>equals</operation>
            <value>N.M.O. 2</value>
        </criteriaItems>
        <criteriaItems>
            <field>NMO_Process__c.RecordType</field>
            <operation>equals</operation>
            <value>NMO EU buyback</value>
        </criteriaItems>
        <criteriaItems>
            <field>NMO_Process__c.NMO_Failed__c</field>
            <operation>equals</operation>
            <value>False</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Reset_Initial_Submitter</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Reset_Is_Locked_re_evaluate</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Reset_Initial_Submitter</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Reset_Is_Locked_re_evaluate</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Update_Initial_Submitter</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Is_Locked</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Buyback NMO phase NMO 2 approval</label>
    <processOrder>2</processOrder>
    <recallActions>
        <action>
            <name>Reset_Initial_Submitter</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Reset_Is_Locked</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
