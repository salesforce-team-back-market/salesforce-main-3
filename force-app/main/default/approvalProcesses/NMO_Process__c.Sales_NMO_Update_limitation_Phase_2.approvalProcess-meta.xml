<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <submitter>View_All</submitter>
        <type>roleSubordinates</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Merchant_PK__c</field>
        <field>Merchant_Name__c</field>
        <field>Stage__c</field>
        <field>Profile__c</field>
        <field>BizDevApproval__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Update_field_Limit_Phase_2_Approved</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Manager__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Increase Sales limitation to 15 sales/day</label>
        <name>Increase_Sales_limitation_to_15_sales_day</name>
        <rejectionActions>
            <action>
                <name>Update_field_Phase_2_Limit_Refused</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>Triggered manually, assigned to Manager.
Decision to increase Sales limitation to 15.</description>
    <emailTemplate>Admin_templates/NMO_Approval_Process_Triggered</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>NMO_Process__c.Phase_2_Limitation_update__c</field>
            <operation>equals</operation>
            <value>Requested</value>
        </criteriaItems>
        <criteriaItems>
            <field>NMO_Process__c.Stage__c</field>
            <operation>equals</operation>
            <value>Phase 2</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Reset_Is_Locked</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Reset_Is_Locked</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Update_Is_Locked</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Sales NMO - Update limitation - Phase 2</label>
    <processOrder>4</processOrder>
    <recallActions>
        <action>
            <name>Reset_Is_Locked</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
