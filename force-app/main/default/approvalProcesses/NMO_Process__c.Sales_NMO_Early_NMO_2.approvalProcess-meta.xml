<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <submitter>View_All</submitter>
        <type>roleSubordinates</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Merchant_PK__c</field>
        <field>Merchant_Name__c</field>
        <field>Stage__c</field>
        <field>Profile__c</field>
        <field>BizDevApproval__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Update_Early_move_to_NMO_2</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Update_Has_Entered_NMO_2_On</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Update_Stage_NMO_2</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Manager__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Send in Early NMO 2</label>
        <name>Send_in_Early_NMO_2</name>
        <rejectionActions>
            <action>
                <name>Update_Early_move_to_NMO_2_Refused</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>Triggered by Perf Data, assigned to Manager. 
Decision to go to NMO 2 or stay in Phase 3.</description>
    <emailTemplate>Admin_templates/NMO_Approval_Process_Triggered</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>NMO_Process__c.Stage__c</field>
            <operation>equals</operation>
            <value>Phase 3</value>
        </criteriaItems>
        <criteriaItems>
            <field>NMO_Process__c.Phase_3_Limitation_update__c</field>
            <operation>notEqual</operation>
            <value>Requested</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Reset_Is_Locked</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Reset_Is_Locked</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Update_Is_Locked</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Sales NMO - Early NMO 2</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>4</processOrder>
    <recallActions>
        <action>
            <name>Reset_Is_Locked</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
