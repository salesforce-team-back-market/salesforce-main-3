<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <submitter>View_All</submitter>
        <type>role</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>Supply_Leader</submitter>
        <type>roleSubordinates</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Explanation_3__c</field>
        <field>Name</field>
        <field>Back_Office_Configuration__c</field>
        <field>BizDev__c</field>
        <field>Merchant_Name__c</field>
        <field>Stocks_Ads__c</field>
        <field>Shipping_Costs__c</field>
        <field>TC__c</field>
        <field>BIC__c</field>
        <field>IBAN__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Field_Update_Stage_to_Completed</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Onboarding_Process_response_e_mail</name>
                <type>Alert</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Manager_for_Approval__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Quality verifications</label>
        <name>Quality_verifications</name>
        <rejectionActions>
            <action>
                <name>Onboarding_Process_response_e_mail</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <emailTemplate>Admin_templates/Onboarding_Process_3_3_step_to_N_M_O_approval_submission_e_mail_text_version</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>1 AND (2 OR 3) AND 4 AND 5</booleanFilter>
        <criteriaItems>
            <field>Onboarding_Process__c.Stage__c</field>
            <operation>equals</operation>
            <value>Ongoing</value>
        </criteriaItems>
        <criteriaItems>
            <field>Onboarding_Process__c.RecordType</field>
            <operation>equals</operation>
            <value>E.U. Onboarding</value>
        </criteriaItems>
        <criteriaItems>
            <field>Onboarding_Process__c.RecordType</field>
            <operation>equals</operation>
            <value>U.S. Onboarding</value>
        </criteriaItems>
        <criteriaItems>
            <field>Onboarding_Process__c.Global_completion_rate__c</field>
            <operation>greaterOrEqual</operation>
            <value>100</value>
        </criteriaItems>
        <criteriaItems>
            <field>Account.Exit_granted__c</field>
            <operation>equals</operation>
            <value>False</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Reset_Initial_Submitter</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Reset_Is_Locked</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Reset_Initial_Submitter</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Reset_Is_Locked</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Update_Initial_Submitter</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Is_Locked</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Onboarding 3.3 to NMO Approval Process</label>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>Reset_Initial_Submitter</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Reset_Is_Locked</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
