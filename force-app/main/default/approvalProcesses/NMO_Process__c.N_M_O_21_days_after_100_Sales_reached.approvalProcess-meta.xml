<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <submitter>View_All</submitter>
        <type>role</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>Supply_Leader</submitter>
        <type>roleSubordinates</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>bointegration@backmarket.com</submitter>
        <type>user</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Back_Office_PK__c</field>
        <field>Merchant__c</field>
        <field>Explanation_7__c</field>
        <field>Name</field>
        <field>Has_Begun_On__c</field>
        <field>Stage__c</field>
        <field>Has_Reached_100_Sales__c</field>
        <field>BizDev__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>NMO_Process_response_e_mail</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Update_Unlimited_Granted</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>BizDevApproval__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>Unanimous</whenMultipleApprovers>
        </assignedApprover>
        <label>Validation Run</label>
        <name>Validation_Run</name>
        <rejectionActions>
            <action>
                <name>Update_Has_Entered_NMO_2_On</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Update_Stage_NMO_2</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>This approval Process is triggered 21 Days after the Merchand has reached 100 Sales, or 60 days after entering NMO.</description>
    <emailTemplate>Admin_templates/N_M_O_Process_21_days_after_100_sales_Reached</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>1 AND (2 OR 3) AND 4 AND 5 AND 6 AND 7</booleanFilter>
        <criteriaItems>
            <field>NMO_Process__c.Has_Reached_100_Sales__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <criteriaItems>
            <field>NMO_Process__c.has_reached_100_sales_since_21_days__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <criteriaItems>
            <field>NMO_Process__c.Has_been_created_since_42_days_or_more__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <criteriaItems>
            <field>Account.Backwatch__c</field>
            <operation>equals</operation>
            <value>False</value>
        </criteriaItems>
        <criteriaItems>
            <field>NMO_Process__c.RecordType</field>
            <operation>notEqual</operation>
            <value>NMO EU buyback</value>
        </criteriaItems>
        <criteriaItems>
            <field>NMO_Process__c.Unlimited_granted__c</field>
            <operation>equals</operation>
            <value>False</value>
        </criteriaItems>
        <criteriaItems>
            <field>NMO_Process__c.Stage__c</field>
            <operation>equals</operation>
            <value>Phase 2</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>NMO_Process_response_e_mail</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Reset_Initial_Submitter</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Reset_Is_Locked</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>This_alert_is_sent_when_a_merchant_is_out_of_N_M_O</name>
            <type>Alert</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Reset_Initial_Submitter</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Reset_Is_Locked</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Update_Initial_Submitter</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Is_Locked</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>N.M.O. 21 days after 100 Sales reached</label>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>Reset_Initial_Submitter</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Reset_Is_Locked</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
