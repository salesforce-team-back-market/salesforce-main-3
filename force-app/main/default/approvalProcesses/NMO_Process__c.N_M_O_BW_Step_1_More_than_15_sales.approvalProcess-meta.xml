<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <submitter>View_All</submitter>
        <type>role</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>Supply_Leader</submitter>
        <type>roleSubordinates</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Back_Office_PK__c</field>
        <field>Merchant__c</field>
        <field>Explanation_7__c</field>
        <field>Name</field>
        <field>Has_Begun_On__c</field>
        <field>Stage__c</field>
        <field>Has_Reached_100_Sales__c</field>
        <field>BizDev__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>NMO_Process_response_e_mail</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Update_Unlimited_Granted</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>BizDevApproval__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>Unanimous</whenMultipleApprovers>
        </assignedApprover>
        <label>Validation Run</label>
        <name>Validation_Run</name>
        <rejectionActions>
            <action>
                <name>Update_Has_Entered_NMO_2_On</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Update_Stage_NMO_2</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>This approval Process is triggered 21 Days after the Merchant has reached 15 Sales</description>
    <emailTemplate>Admin_templates/NMO_BW_Approval</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>1 AND 2 AND 3</booleanFilter>
        <criteriaItems>
            <field>Account.Backwatch__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <criteriaItems>
            <field>NMO_Process__c.RecordType</field>
            <operation>equals</operation>
            <value>NMO EU</value>
        </criteriaItems>
        <criteriaItems>
            <field>NMO_Process__c.Back_Watch_Granted__c</field>
            <operation>equals</operation>
            <value>False</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Reset_Initial_Submitter</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Reset_Is_Locked</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Has_finished_Back_Watch_NMO</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Reset_Initial_Submitter</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Reset_Is_Locked</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Step_1_refused</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Update_Initial_Submitter</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Is_Locked</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>N.M.O. BW Step 1 : More than 15 sales</label>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>Reset_Initial_Submitter</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Reset_Is_Locked</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
