<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <submitter>View_All</submitter>
        <type>role</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>Supply_Leader</submitter>
        <type>roleSubordinates</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Back_Office_PK__c</field>
        <field>Merchant__c</field>
        <field>Explanation_8__c</field>
        <field>Name</field>
        <field>Has_Begun_On__c</field>
        <field>Stage__c</field>
        <field>Has_Reached_100_Sales__c</field>
        <field>BizDev__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>NMO_Process_response_e_mail</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Update_Back_Watch_granted</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>BizDevApproval__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>Unanimous</whenMultipleApprovers>
        </assignedApprover>
        <label>Validation Phase</label>
        <name>Validation_Phase</name>
        <rejectionActions>
            <action>
                <name>NMO_Process_response_e_mail</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Update_Has_Entered_NMO_2_On</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Update_Stage_NMO_2</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>This Approval Process is meant to decide whether or not a Merchant may go run in Back Watch or be watched during a N.M.O. 2 Observation Phase.</description>
    <emailTemplate>Admin_templates/NMO_Process_Phase_2_to_N_M_O_2_approval_submission_e_mail_text_version</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>1 AND 2 AND 4 AND 5 AND 7 AND ((3 AND 6) OR 8)</booleanFilter>
        <criteriaItems>
            <field>NMO_Process__c.Unlimited_granted__c</field>
            <operation>equals</operation>
            <value>False</value>
        </criteriaItems>
        <criteriaItems>
            <field>NMO_Process__c.Stage__c</field>
            <operation>equals</operation>
            <value>Phase 2</value>
        </criteriaItems>
        <criteriaItems>
            <field>NMO_Process__c.has_reached_100_sales_since_21_days__c</field>
            <operation>equals</operation>
            <value>False</value>
        </criteriaItems>
        <criteriaItems>
            <field>Account.Backwatch__c</field>
            <operation>equals</operation>
            <value>False</value>
        </criteriaItems>
        <criteriaItems>
            <field>NMO_Process__c.RecordType</field>
            <operation>equals</operation>
            <value>NMO EU</value>
        </criteriaItems>
        <criteriaItems>
            <field>NMO_Process__c.Has_been_created_since_42_days_or_more__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <criteriaItems>
            <field>NMO_Process__c.Back_Watch_Granted__c</field>
            <operation>equals</operation>
            <value>False</value>
        </criteriaItems>
        <criteriaItems>
            <field>NMO_Process__c.Exception__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>NMO_Process_response_e_mail</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Reset_Initial_Submitter</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Reset_Is_Locked</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>This_alert_is_sent_when_a_merchant_is_out_of_N_M_O</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_Back_Watch_granted</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Reset_Initial_Submitter</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Reset_Is_Locked</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Update_Initial_Submitter</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Is_Locked</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>N.M.O. 42 days limit approval process</label>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>Reset_Initial_Submitter</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Reset_Is_Locked</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
